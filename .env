# --- Model sources / behavior ---
AIO_REPO=Phr00t/Chroma-Rapid-AIO
AIO_FILENAME_PRI=Chroma-Rapid-AIO-v2.safetensors
AIO_FILENAME_ALT=Chroma-Rapid-AIO.safetensors
CHROMA_BASE_ID=lodestones/Chroma

# Memory/perf toggles
ENABLE_CPU_OFFLOAD=1
ENABLE_VAE_TILING=1

# (Optional) Hugging Face auth if needed
HF_TOKEN={{ RUNPOD_SECRET_HF_TOKEN }}

# HF caches (kept in container layer)
HF_HOME=/weights/huggingface
HUGGINGFACE_HUB_CACHE=/weights/huggingface
TRANSFORMERS_CACHE=/weights/huggingface
DIFFUSERS_CACHE=/weights/huggingface
HF_HUB_ENABLE_HF_TRANSFER=1
TOKENIZERS_PARALLELISM=false
PYTORCH_CUDA_ALLOC_CONF=max_split_size_mb:128,expandable_segments:True

# --- MinIO / S3 upload + presign ---
S3_ENDPOINT_URL={{ MINIO_ENDPOINT_GRANITE_33 }}
S3_ACCESS_KEY={{ MINIO_ACCESS_KEY_GRANITE_33 }}
S3_SECRET_KEY={{ MINIO_API_KEY_GRANITE_33 }}
S3_REGION=us-west-000
S3_BUCKET={{ MINIO_BUCKET_GRANITE_33 }}
S3_PREFIX=chroma/outputs/
S3_PRESIGN_EXPIRES=86400
S3_USE_SSL=1
S3_VERIFY_SSL=1
# attachment = download; inline = open in browser
S3_CONTENT_DISPOSITION=inline
